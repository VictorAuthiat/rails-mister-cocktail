<div class="container">
  <h1 class="text-center">Wagon's Cocktails</h1>
  <div class="cards">
     <% @cocktails.each do |cocktail| %>
        <% if cocktail.name.match(/wagon/) %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cocktail.image_url %>')">
            <%= link_to cocktail.name,cocktail_path(cocktail), class: 'btna'  %>
            <%= link_to "🗑️", cocktail_path(cocktail), method: :delete %>
          </div>
        <% end %>
     <% end %>
  </div>
    <%= link_to "Add a cocktail!", new_cocktail_path, class: 'btn btn-primary' %>
</div>

