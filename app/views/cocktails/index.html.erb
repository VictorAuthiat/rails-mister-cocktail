<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://havana-club.com/fr-be/sites/default/files/imports/assets/node_cocktail/Canchánchara/Canchanchara-Cocktail-recipe-Havana-club.jpg);">
    <div class="container">
      <div class="row justify-content-center">
        <%= link_to "Add a cocktail!", new_cocktail_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

  <h1 class="text-center">All Cocktails</h1>
  <div class="cards">
     <% @cocktails.each do |cocktail| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cocktail.photo %>')">
          <%= link_to cocktail.name,cocktail_path(cocktail), class: 'btna'  %>
          <%= link_to "🗑️", cocktail_path(cocktail), method: :delete %>
        </div>
     <% end %>
  </div>
</div>

